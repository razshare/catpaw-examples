{
  "name": "catpaw/starter",
  "type": "project",
  "description": "A php CatPaw starter template",
  "homepage": "https://github.com/tncrazvan/catpaw-starter",
  "license": "MIT",
  "scripts": {
    "load": "composer dump-autoload -o",
    "prod:fix": [
      "php -dxdebug.mode=off ./vendor/bin/php-cs-fixer fix src",
      "php -dxdebug.mode=off ./vendor/bin/php-cs-fixer fix tests"
    ],
    "prod:start:helloworld": "php ./bin/start --entry='./src/helloworld/main.php'",
    "prod:start:raspberrypi": "php ./bin/start --entry='./src/raspberrypi/main.php'",
    "prod:start:readable": "php ./bin/start --entry='./src/readable/main.php'",
    "prod:start:writable": "php ./bin/start --entry='./src/writable/main.php'",
    "prod:start:web:byterange": "php ./bin/start --entry='./src/web/byterange/main.php'",
    "prod:start:web:cats": "php ./bin/start --entry='./src/web/cats/main.php'",
    "prod:start:web:customattributes": "php ./bin/start --entry='./src/web/customattributes/main.php'",
    "prod:start:web:helloworld": "php ./bin/start --entry='./src/web/helloworld/main.php'",
    "prod:start:web:notfound": "php ./bin/start --entry='./src/web/notfound/main.php'",
    "prod:start:web:openapi": "php ./bin/start --entry='./src/web/openapi/main.php'",
    "prod:start:web:params": "php  -dxdebug.mode=debug -dxdebug.start_with_request=yes ./bin/start --entry='./src/web/params/main.php'",
    "prod:start:web:session": "php ./bin/start --entry='./src/web/session/main.php'",
    "dev:precommit": "pre-commit install && pre-commit autoupdate",
    "download:catpaw": "[ ! -f catpaw.phar ] && wget https://github.com/tncrazvan/catpaw/releases/latest/download/catpaw.phar || echo ''",
    "download:psalm": "[ ! -f psalm.phar ] && wget https://github.com/vimeo/psalm/releases/latest/download/psalm.phar || echo ''",
    "post-autoload-dump": [
      "@download:psalm",
      "@download:catpaw"
    ],
    "post-create-project-cmd": [
      "@download:psalm",
      "@download:catpaw"
    ]
  },
  "authors": [
    {
      "name": "Razvan Tanase",
      "email": "tangent.jotey@gmail.com",
      "homepage": "https://github.com/tncrazvan",
      "role": "Developer"
    }
  ],
  "autoload": {
    "psr-4": {
      "App\\": "src/lib/"
    },
    "files": [
      "src/functions.php"
    ]
  },
  "minimum-stability": "stable",
  "require": {
    "php": "^8.2",
    "catpaw/catpaw": "^2.0",
    "amphp/amp": "^3.0",
    "amphp/file": "^3.0"
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "require-dev": {
    "friendsofphp/php-cs-fixer": "^3.8",
    "phpunit/phpunit": "^9"
  },
  "config": {
    "preferred-install": "dist",
    "process-timeout": 0
  }
}
